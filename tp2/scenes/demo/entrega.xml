<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <globals background="0 0 0 1" ambient="0.1 0.1 0.1 1" />

    <fog color="1.0 1.0 1.0 1.0" near="1000.0" far="10000.0" />

    <cameras initial="cam1">
        <perspective id="cam1"
            angle="60"
            near="0.1"
            far="1000"
            location="15 15 15"
            target="0 0.0 0" />

        <orthogonal id="cam2"
            near="0.1"
            far="1000"
            location="0 15 15"
            target="0.0 15 0.0"
            left="-5"
            right="5"
            bottom="-5"
            top="-5" />
    </cameras>

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas
    texturas -->
    <textures>
        <texture id="cake_interior" filepath="textures/cake_interior.png" />
        <texture id="ceiling" filepath="textures/ceiling.jpg" />
        <texture id="floor" filepath="textures/floor.jpg" />
        <texture id="tile-floor" filepath="textures/tile-floor.jpg" />
        <texture id="wall" filepath="textures/wall.jpg" />
        <texture id="wardrobe" filepath="textures/wardrobe.png" />
        <texture id="mirror" filepath="textures/mirror.jpg" />
        <texture id="carpet" filepath="textures/carpet.jpg" />
        <texture id="pic1" filepath="textures/print1.png" />
        <texture id="pic2" filepath="textures/print2.png" />
    </textures>

    <materials>

        <material id="wardrobe-color"
            color="1 1 1 1"
            specular="0 0 0 0"
            shininess="0"
            emissive="0 0 0 0" />


        <material id="floorMaterial"
            textureref="tile-floor"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
            twosided="true"
        />

        <material id="ceilingMaterial"
            textureref="ceiling"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
        />

        <material id="wallMaterial"
            textureref="wall"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
        />

        <material id="wardrobeMaterial"
            color="0.9 0.98 0.95 1.0"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            shininess="90"
            textureref="wardrobe" />

        <material id="mirrorMaterial"
            textureref="mirror"
            emissive="0.0 0.0 0.0 1"
            specular="0.1 0.1 0.1 0.1"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
        />

        <material id="pictureWall1Material"
            textureref="pic1"
            color="1 1 1 1"
            specular="0 0 0 1"
            shininess="0"
            emissive="0 0 0 1" 
        />

        <material id="pictureWall2Material"
            textureref="pic2"
            color="1 1 1 1"
            specular="0.01 0.01 0 1"
            shininess="0"
            emissive="0 0 0 1" 
        />

        <material id="carpetMaterial"
            textureref="carpet"
            specular="0 0 0 0"
            shininess="90"
            emissive="0 0 0 1" 
            color="0.5 0.5 0.5 1.0"
        />



    </materials>

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="frontWall" />
                <noderef id="backWall" />
                <noderef id="leftWall" />
                <noderef id="rightWall" />
                <noderef id="floor" />
                <noderef id="ceiling" />
                <noderef id="wardrobe" />
                <noderef id="mirror" />
                <noderef id="carpet" />
                <noderef id="picture-wall-1"/>
                <noderef id="picture-wall-2" />
                <noderef id="sink" />

                <pointlight id="light" enabled="false"
                    color="0.41 0.37 0.22 1"
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="0 4 0"
                />

                <spotlight id="spotlight" enabled="true" 
            	color = "0.96 0.89 0.74 1.0"
                intensity="30"
                distance="50"
                angle="20" 
                penumbra="1.0"
                position="0 4.7 0" 
                target="0 0 0" 
                /> 


                <directionallight id="light5" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="1.0"
                    castshadow="true"
                    position="2 2 4"
                />

                <directionallight id="light6" enabled="true"
                    color="1.0 1.0 1.0 1"
                    intensity="1.0"
                    castshadow="true"
                    position="-4 2 -2"
                />


            </children>
        </node>

        <node id="frontWall">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="0 -90.0 0.0" />
                <translate value3="0 2.5 -5.0" />
            </transforms>


            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="backWall">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="0 90.0 0.0" />
                <translate value3="0 2.5 -5.0" />
            </transforms>


            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="rightWall">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="360.0 0.0 0.0" />
                <translate value3="0.0 2.5 -5.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="leftWall">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="180.0 0.0 180.0" />
                <translate value3="0.0 2.5 -5.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="floor">
            <materialref id="floorMaterial" />
            <transforms>
                <rotate value3="-90.0 0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -5" xy2="5 5" />
                </primitive>
            </children>

        </node>

        <node id="ceiling">
            <materialref id="ceilingMaterial" />
            <transforms>
                <translate value3="0 5 0" />
                <rotate value3="90.0 0 0.0" />
            </transforms>


            <children>
                <primitive>
                    <rectangle xy1="-5 -5" xy2="5 5" />
                </primitive>
            </children>

        </node>


        <node id="wardrobe">
            <children>

                <noderef id="wardrobe-structure" />
                <noderef id="wardrobe-front" />

            </children>
        </node>

        <node id="wardrobe-structure">
            <materialref id="wardrobe-color" />
            <children>
                <primitive>
                    <box xyz1="-5 0 -5" xyz2="-3 4.5 -3.5" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 0 0" />
                <rotate value3="0 0 0" />
            </transforms>
        </node>

        <node id="wardrobe-front">
            <materialref id="wardrobeMaterial" />
            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="2 4.5" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-5 0 -3.499" />
            </transforms>
        </node>

        <node id="mirror">
            <materialref id="mirrorMaterial" />
            <children>
                <primitive>
                    <rectangle xy1="-1 0" xy2="3 2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-1 2 -4.98" />
            </transforms>


        </node>

        <node id="picture-wall-1">
            <materialref id="pictureWall1Material" />
            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="1.2 1.55" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-4.99 2 0" />
                <rotate value3="0 90 0" />
            </transforms>
        </node>

        <node id="picture-wall-2">
            <materialref id="pictureWall2Material" />
            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="1.2 1.55" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-4.99 2.5 2" />
                <rotate value3="0 90 0" />
            </transforms>
        </node>


        <node id="carpet">
            <materialref id="carpetMaterial" />
            <children>
                <primitive>
                    <rectangle xy1="-3 -2" xy2="3 2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 0.001 0" />
                <rotate value3="-90 0 0" />
            </transforms>
        </node>

        <node id="sink">
            <materialref id="floorMaterial" />
            <children>
                <primitive>
                    <cylinder base="0.6" top="1" height="0.6" slices="20" stacks="20" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1.4 -4" />
                <scale value3="2 1 1" />
            </transforms>
        </node>
    </graph>
</yaf> 