
<?xml-model href="https://schema.toino.pt/yaf.xsd" type="application/xml"?>

<yaf>

    <globals background="0 0 0 1" ambient="0.1 0.1 0.1 1" />

    <fog color="1.0 1.0 1.0 1.0" near="1000.0" far="10000.0" />

    <skybox
        size="100 100 100"
        center="0 49.9 0"
        emissive="0 0 0 1"
        intensity="5"
        front="scenes/entrega/texturas-entrega/OPA.jpg"
        back="scenes/entrega/texturas-entrega/OPA.jpg"
        up="scenes/entrega/texturas-entrega/OPA.jpg"
        down="scenes/entrega/texturas-entrega/OPA.jpg"
        left="scenes/entrega/texturas-entrega/OPA.jpg"
        right="scenes/entrega/texturas-entrega/OPA.jpg" />

    <cameras initial="cam1">
        <perspective id="cam1"
            angle="60"
            near="0.1"
            far="1000"
            location="15 15 15"
            target="0 0.0 0" />

        <orthogonal id="cam2"
            near="0.1"
            far="1000"
            location="0 15 15"
            target="0.0 15 0.0"
            left="-5"
            right="5"
            bottom="-5"
            top="-5" />
    </cameras>

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas
    texturas -->
    <textures>
        <texture id="ceiling-texture" filepath="scenes/entrega/texturas-entrega/ceiling.jpg" />
        <texture id="tile-floor" filepath="scenes/entrega/texturas-entrega/tile-floor.jpg" />
        <texture id="wall" filepath="scenes/entrega/texturas-entrega/wall1.png" />
        <texture id="door-texture" filepath="scenes/entrega/texturas-entrega/door.jpg" />
        <texture id="mirror-texture" filepath="scenes/entrega/texturas-entrega/mirror.jpg" />
        <texture id="pic1" filepath="scenes/entrega/texturas-entrega/print1.png" />
        <texture id="pic2" filepath="scenes/entrega/texturas-entrega/print2.png" />
    </textures>

    <materials>

        <material id="white"
            color="1 1 1 1"
            specular="0.7 0.7 0.7 1"
            shininess="10"
            emissive="0.1 0.1 0.1 1"
            twosided="true" />

        <material id="grey"
            color="0.6 0.6 0.6 1"
            specular="0.7 0.7 0.7 1"
            shininess="10"
            emissive="0 0 0 1"
            twosided="true" />


        <material id="floorMaterial"
            textureref="tile-floor"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
            twosided="true"
        />

        <material id="ceilingMaterial"
            textureref="ceiling-texture"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
        />

        <material id="wallMaterial"
            textureref="wall"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
        />

        <material id="doorMaterial"
            color="0.9 0.98 0.95 1.0"
            emissive="0.0 0.0 0.0 1"
            specular="0 0 0 0"
            shininess="90"
            textureref="door-texture" />

        <material id="mirrorMaterial"
            textureref="mirror-texture"
            emissive="0.0 0.0 0.0 1"
            specular="0.1 0.1 0.1 0.1"
            color="0.8 0.8 0.8 1.0"
            shininess="0"
        />

        <material id="pictureWall1Material"
            textureref="pic1"
            color="1 1 1 1"
            specular="0 0 0 1"
            shininess="0"
            emissive="0 0 0 1"
        />

        <material id="pictureWall2Material"
            textureref="pic2"
            color="1 1 1 1"
            specular="0.01 0.01 0 1"
            shininess="0"
            emissive="0 0 0 1"
        />


    </materials>

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="frontWall" />
                <noderef id="backWall" />
                <noderef id="leftWall" />
                <noderef id="rightWall" />
                <noderef id="floor" />
                <noderef id="ceiling" />
                <noderef id="door" />
                <noderef id="mirror" />
                <noderef id="picture-wall-1" />
                <noderef id="picture-wall-2" />
                <noderef id="toilet" />
                <noderef id="sink" />

                <pointlight id="light" enabled="false"
                    color="0.41 0.37 0.22 1"
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="0 4 0"
                />

                <spotlight id="spotlight" castshadow="true" enabled="true"
                    color="0.96 0.89 0.74 1.0"
                    intensity="30"
                    distance="50"
                    angle="20"
                    penumbra="1.0"
                    position="0 4.7 0"
                    target="0 0 0"
                />




            </children>
        </node>

        <node id="frontWall" castshadows="true" receiveshadows="true">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="0 -90.0 0.0" />
                <translate value3="0 2.5 -5.0" />
            </transforms>


            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="backWall" castshadows="true" receiveshadows="true">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="0 90.0 0.0" />
                <translate value3="0 2.5 -5.0" />
            </transforms>


            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="rightWall" castshadows="true" receiveshadows="true">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="360.0 0.0 0.0" />
                <translate value3="0.0 2.5 -5.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="leftWall" castshadows="true" receiveshadows="true">
            <materialref
                id="wallMaterial"
            />
            <transforms>
                <rotate value3="180.0 0.0 180.0" />
                <translate value3="0.0 2.5 -5.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -2.5" xy2="5 2.5" />
                </primitive>
            </children>

        </node>

        <node id="floor" castshadows="true" receiveshadows="true">
            <materialref id="floorMaterial" />
            <transforms>
                <rotate value3="-90.0 0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -5" xy2="5 5" />
                </primitive>
            </children>

        </node>

        <node id="ceiling" castshadows="true" receiveshadows="true">
            <materialref id="ceilingMaterial" />
            <transforms>
                <translate value3="0 5 0" />
                <rotate value3="90.0 0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-5 -5" xy2="5 5" />
                </primitive>
            </children>

        </node>


        <node id="door">
            <materialref id="doorMaterial" />
            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="2 4.5" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-4.9 0 -2.5" />
                <rotate value3="0 90 0" />
            </transforms>
        </node>

        <node id="mirror">
            <materialref id="mirrorMaterial" />
            <children>
                <primitive>
                    <rectangle xy1="-1 0" xy2="3 2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-1 2 -4.98" />
            </transforms>


        </node>

        <node id="picture-wall-1">
            <materialref id="pictureWall1Material" />
            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="1.2 1.55" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-4.99 2 0" />
                <rotate value3="0 90 0" />
            </transforms>
        </node>

        <node id="picture-wall-2">
            <materialref id="pictureWall2Material" />
            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="1.2 1.55" />
                </primitive>
            </children>
            <transforms>
                <translate value3="-4.99 2.5 2" />
                <rotate value3="0 90 0" />
            </transforms>
        </node>


        <node id="toilet">
            <children>
                <noderef id="toilet-bottom-1" />
                <noderef id="toilet-bottom-2" />
                <noderef id="toilet-bottom-3" />
                <noderef id="toilet-bottom-4" />
                <noderef id="toilet-bottom-5" />
                <noderef id="toilet-button" />
            </children>
            <transforms>
                <translate value3="-4 0 4" />
            </transforms>
        </node>

        <node id="toilet-bottom-1">
            <materialref id="white" />
            <children>
                <primitive>
                    <cylinder base="0.4" top="0.5" height="0.5" slices="20" stacks="20" />
                </primitive>
            </children>
            <transforms>
                <scale value3="1 2 1.5" />
                <translate value3="0 0.5 0" />
            </transforms>
        </node>

        <node id="toilet-bottom-2">
            <materialref id="white" />
            <children>
                <primitive>
                    <box xyz1="-0.5 0.8 0.4" xyz2="0.5 2 0.7" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 0 0" />
                <scale value3="1 1 1.5" />
            </transforms>
        </node>

        <node id="toilet-bottom-3">
            <materialref id="white" />
            <children>
                <primitive>
                    <sphere radius="0.6" slices="40" stacks="10" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
                <scale value3="1 0.4 1.7" />
            </transforms>
        </node>


        <node id="toilet-bottom-4">
            <materialref id="white" />
            <children>
                <primitive>
                    <sphere radius="0.7" slices="40" stacks="10" thetalength="1.57" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
                <scale value3="0.8 -1 1.3" />
            </transforms>
        </node>

        <node id="toilet-bottom-5">
            <materialref id="white" />
            <children>
                <primitive>
                    <cylinder base="0.3" top="0.3" height="1" slices="10" stacks="10" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 0.5 0.5" />
                <scale value3="1 1 1.8" />
            </transforms>
        </node>

        <node id="toilet-button">
            <materialref id="grey" />
            <children>
                <primitive>
                    <sphere radius="0.1" slices="10" stacks="10" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 2 0.8" />
                <scale value3="1 0.5 1" />
            </transforms>
        </node>


        <node id="sink">
            <children>
                <noderef id="sink-base-wood" />
                <noderef id="sink-actual-base" />
                <noderef id="sink-handler" />

            </children>
            <transforms>
                <translate value3="0 0.7 4.3" />
            </transforms>
        </node>

        <node id="sink-base-wood">
            <materialref id="white" />
            <children>
                <primitive>
                    <box xyz1="-1.2 0 -0.7" xyz2="1.2 1 0.7" />
                </primitive>
            </children>
            <transforms>
            </transforms>
        </node>

        <node id="sink-actual-base">
            <children>
                <noderef id="sink-actual-base-bottom" />
                <noderef id="sink-actual-base-left" />
                <noderef id="sink-actual-base-right" />
                <noderef id="sink-actual-base-front" />
                <noderef id="sink-actual-base-back" />
                <noderef id="sink-button" />
            </children>
        </node>

        <node id="sink-actual-base-bottom">
            <materialref id="grey" />
            <children>
                <primitive>
                    <box xyz1="-0.6 0 -0.5" xyz2="0.6 0.1 0.2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
            </transforms>
        </node>

        <node id="sink-actual-base-left">
            <materialref id="grey" />
            <children>
                <primitive>
                    <box xyz1="-0.6 0 -0.4" xyz2="-0.5 0.2 0.2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
            </transforms>
        </node>

        <node id="sink-actual-base-right">
            <materialref id="grey" />
            <children>
                <primitive>
                    <box xyz1="0.6 0 -0.4" xyz2="0.5 0.2 0.2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
            </transforms>
        </node>

        <node id="sink-actual-base-front">
            <materialref id="grey" />
            <children>
                <primitive>
                    <box xyz1="-0.6 0 -0.5" xyz2="0.6 0.2 -0.4" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
            </transforms>
        </node>

        <node id="sink-actual-base-back">
            <materialref id="grey" />
            <children>
                <primitive>
                    <box xyz1="-0.6 0 0.3" xyz2="0.6 0.2 0.2" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1 0" />
            </transforms>
        </node>

        <node id="sink-button">
            <materialref id="white" />
            <children>
                <primitive>
                    <sphere radius="0.1" slices="10" stacks="10" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1.05 0" />
            </transforms>
        </node>

        <node id="sink-handler">
            <materialref id="white" />
            <children>
                <noderef id="sink-handler-1" />
                <noderef id="sink-handler-2" />
                <noderef id="sink-handler-3" />
            </children>
        </node>
        <node id="sink-handler-1">
            <children>
                <primitive>
                    <cylinder base="0.08" top="0.08" height="0.8" slices="10" stacks="3" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1.3 0.5" />
            </transforms>

        </node>
        <node id="sink-handler-2">
            <children>
                <primitive>
                    <cylinder base="0.04" top="0.04" height="0.4" slices="10" stacks="3" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1.5 0.35" />
                <rotate value3="60 0 0" />
            </transforms>

        </node>

        <node id="sink-handler-3">
            <children>
                <primitive>
                    <box xyz1="-0.08 0 -0.15" xyz2="0.08 0.03 0.25" />
                </primitive>
            </children>
            <transforms>
                <translate value3="0 1.7 0.35" />
            </transforms>

        </node>
    </graph>
</yaf> 